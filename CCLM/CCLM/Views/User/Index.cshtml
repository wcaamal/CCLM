@model IEnumerable<CCLM.Models.User>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/sb-admin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
<link href="~/Content/sb-admin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Usuarios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

                <a href="@Url.Action("Create", "User")" id="cancel" class="btn btn-default btn-circle" title="Nuevo"><i class="fa fa-list"></i></a>

                Usuarios Registrados
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.NickName)</th>
                            <th>@Html.DisplayNameFor(m => m.FullName)</th>
                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                            <th>@Html.DisplayNameFor(m => m.DistributionCentersAmount)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => row.NickName)</td>
                                <td>@Html.DisplayFor(x => row.FullName)</td>
                                <td>@Html.DisplayFor(x => row.Email)</td>
                                <td>@Html.DisplayFor(x => row.DistributionCentersAmount)</td>
                                <td><a href="@Url.Action("Edit", "User", new { id = row.Id })" type="submit" title="Editar usuario" class="btn btn-primary btn-circle"><i class="fa fa-edit"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script src="~/Content/sb-admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/Content/sb-admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="~/Content/sb-admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>



