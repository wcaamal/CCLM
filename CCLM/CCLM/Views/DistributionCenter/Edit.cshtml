@model CCLM.Models.DistributionCenter
@{
    ViewBag.Title = "Edit";
}
<link rel="stylesheet" href="~/Content/bootstrap-touchspin/src/jquery.bootstrap-touchspin.css">
<link rel="stylesheet" href="~/Content/bootstrap-timepicker/css/bootstrap-timepicker.min.css" />

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sitios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Crear Sitio
            </div>
            <div class="panel-body">
                
                    @using (Html.BeginForm("Edit", "DistributionCenter", FormMethod.Post, new { @class = "form", id = "CreateForm" }))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <fieldset disabled>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Code)
                                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", autocomplete = "off" })
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autocomplete = "off" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProcessStartTime)
                                    <div class="input-group bootstrap-timepicker timepicker">
                                        @Html.TextBoxFor(m => m.ProcessStartTime, new { @class = "form-control", autocomplete = "off", @id = "statTimepicker" })
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProcessEndTime)
                                    <div class="input-group bootstrap-timepicker timepicker">
                                        @Html.TextBoxFor(m => m.ProcessEndTime, new { @class = "form-control", autocomplete = "off", @id = "endTimepicker" })
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.BinnacleDays)
                                    @Html.TextBoxFor(m => m.BinnacleDays, new { @class = "form-control", autocomplete = "off", @id = "tsBinnacle" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.MailSuccess)
                                    @Html.CheckBoxFor(m => m.MailSuccess, new { @class = "checkbox", autocomplete = "off" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-success btn-circle btn-lg" title="Guardar">
                                    <i class="fa fa-check"></i>
                                </button>
                                <a href="@Url.Action("Index", "DistributionCenter")" id="cancel" class="btn btn-warning btn-circle btn-lg" title="Cancelar"><i class="fa fa-times"></i></a>
                            </div>
                        </div>
                        

                    }
                        

                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section scripts
{
    <script src="~/Content/bootstrap-touchspin/src/jquery.bootstrap-touchspin.js"></script>
    <script src="~/Content/bootstrap-timepicker/js/bootstrap-timepicker.min.js"></script>
    <script>
        $("#tsBinnacle").TouchSpin({
            min: 1,
            max: 365,
            stepinterval: 1,
            maxboostedstep: 7,

        });
        $('#statTimepicker').timepicker({
            showMeridian: false,
            defaultTime: false
        });
        $('#endTimepicker').timepicker({
            showMeridian: false,
            defaultTime: false
        });
    </script>

}