@model CCLM.Models.DistributionCenter
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Usuarios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Crear Sitio
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Edit", "DistributionCenter", FormMethod.Post, new { @class = "form", id = "CreateForm" }))
                    {
                        <div class="col-lg-6">
                            <fieldset disabled>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Code)
                                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", autocomplete = "off" })
                                </div>
                                </fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autocomplete = "off" })
                                </div>
</div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProcessStartTime)
                                @Html.TextBoxFor(m => m.ProcessStartTime, new { @class = "form-control", autocomplete = "off" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProcessEndTime)
                                @Html.TextBoxFor(m => m.ProcessEndTime, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.BinnacleDays)
                                @Html.TextBoxFor(m => m.BinnacleDays, new { @class = "form-control", autocomplete = "off" })
                            </div>
                        </div>

                        <div class="col-lg-12 center">
                            <button type="submit" class="btn btn-success btn-circle btn-lg" title="Guardar">
                                <i class="fa fa-check"></i>
                            </button>
                            <a href="@Url.Action("Index", "DistributionCenter")" id="cancel" class="btn btn-warning btn-circle btn-lg" title="Cancelar"><i class="fa fa-times"></i></a>
                        </div>

                    }
                </div>

                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
