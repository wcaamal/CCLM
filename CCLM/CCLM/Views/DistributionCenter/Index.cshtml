@model IEnumerable<CCLM.Models.DistributionCenter>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/sb-admin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
<link href="~/Content/sb-admin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sitios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

                <a href="@Url.Action("Create", "DistributionCenter")" id="cancel" class="btn btn-default btn-circle" title="Nuevo"><i class="fa fa-list"></i></a>

                Sitios Registrados
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Code)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.ProcessStartTime)</th>
                            <th>@Html.DisplayNameFor(m => m.ProcessEndTime)</th>
                            <th>@Html.DisplayNameFor(m => m.BinnacleDays)</th>
                            <th>@Html.DisplayNameFor(m => m.MailSuccess)</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => row.Code)</td>
                                <td>@Html.DisplayFor(x => row.Name)</td>
                                <td>@Html.DisplayFor(x => row.ProcessStartTime)</td>
                                <td>@Html.DisplayFor(x => row.ProcessEndTime)</td>
                                <td>@Html.DisplayFor(x => row.BinnacleDays)</td>
                                <td>@Html.DisplayFor(x => row.MailSuccess)</td>

                                <td><a href="@Url.Action("Edit", "DistributionCenter", new { id = row.Id })" type="submit" title="Editar usuario" class="btn btn-primary btn-circle"><i class="fa fa-edit"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section scripts{
    <script src="~/Content/sb-admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/sb-admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/sb-admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true,
                language: {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });
        });
    </script>
}



